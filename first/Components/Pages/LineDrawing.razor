@page "/LineDrawing"
@rendermode InteractiveServer

<style>
    body {
        background-color: #000000;
        transition: all 1s ease-in-out;
    }

    canvas {
        background-color: wheat;
        border: 1px solid transparent;
        padding: 2vw;
        margin: 1vw 20vw;
        border-radius: 2vw;
        box-shadow: 0px 0px 2vw 0vw;
        height: 40vw;
        width: 40vw;
        transition: all 1s ease-in-out;

    }

    .check {
        background-color: whitesmoke;
        border: 1px solid transparent;
        padding: 2vw;
        margin: 2vw 24vw;
        border-radius: 2vw;
        box-shadow: 0px 0px 2vw 0vw;
        transition: all 1s ease-in-out;
        text-align: center;
    }

    button {
        transition: all .5s ease-in-out;
        border: none;
        margin-right: 3vw;
        padding: .7vw;
        border-radius: 7px;

        &:hover {
            box-shadow: 0px 0px 80vw 11vw rgb(102, 255, 0);
            background-color: #f0e68c;
            cursor: pointer;
            transform: scale(1.1);
            border-radius: 100vw;
        }
    }
</style>

<canvas id="myCanvas" width="500" height="500"></canvas>
<div style="width: 30vw;" class="check">
    <h1>Draw Line</h1>
    <button onclick="DDA()">with DDA</button>
    <button onclick="BSA()">With BSA</button>
</div>
<script src="/js/lineDrawingAlgo.js"></script>